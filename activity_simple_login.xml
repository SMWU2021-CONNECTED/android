<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".simple_login"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_passwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"

        android:textStyle="bold"
        android:textSize="30sp"
        android:text="비밀번호"/>

    <TextView
        android:id="@+id/text_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"

        android:textStyle="bold"
        android:textColor="#F44336"
        android:text="@string/text_warning" />

    <ImageView
        android:id="@+id/login_lock_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_baseline_lock_24"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp">

        <ImageView
            android:id="@+id/login_circle_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_fiber_manual_record_24"/>

        <ImageView
            android:id="@+id/login_circle_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_fiber_manual_record_24"/>

        <ImageView
            android:id="@+id/login_circle_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_fiber_manual_record_24"/>

        <ImageView
            android:id="@+id/login_circle_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_fiber_manual_record_24"/>

        <ImageView
            android:id="@+id/login_circle_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_fiber_manual_record_24"/>

        <ImageView
            android:id="@+id/login_circle_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_fiber_manual_record_24"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:columnCount="3"
        android:rowCount="4">

        <Button
            android:id="@+id/login_num_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/button_style_2"
            android:text="1"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/login_num_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/button_style_2"
            android:text="2"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/login_num_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/button_style_2"
            android:text="3"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/login_num_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/button_style_2"
            android:text="4"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/login_num_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/button_style_2"
            android:text="5"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/login_num_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/button_style_2"
            android:text="6"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/login_num_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/button_style_2"
            android:text="7"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/login_num_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/button_style_2"
            android:text="8"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/login_num_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/button_style_2"
            android:text="9"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/login_num_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/button_style_2"
            android:text="0"
            android:textColor="#ffffff" />


    </GridLayout>

    <TextView
        android:id="@+id/login_passwd_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"

        android:textStyle="bold"
        android:textColor="#F44336"
        android:text="@string/login_passwd_reset"/>

    

</LinearLayout>